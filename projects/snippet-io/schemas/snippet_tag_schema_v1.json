{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://snippet-io.example.com/schemas/snippet_tag_schema_v1.json",
  "title": "SnippetTag",
  "description": "Schema for snippet tag documents (for tag management and search)",
  "type": "object",
  "required": [
    "tag",
    "snippet_id",
    "user_id"
  ],
  "properties": {
    "$id": {
      "type": "string",
      "description": "Unique identifier (Appwrite document ID)"
    },
    "tag": {
      "type": "string",
      "description": "Tag name (lowercase, normalized)",
      "minLength": 1,
      "maxLength": 50,
      "pattern": "^[a-z0-9-_]+$"
    },
    "snippet_id": {
      "type": "string",
      "description": "Reference to snippet document ID"
    },
    "user_id": {
      "type": "string",
      "description": "User who created the snippet (for permission filtering)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Tag association creation timestamp"
    }
  },
  "additionalProperties": false
}
